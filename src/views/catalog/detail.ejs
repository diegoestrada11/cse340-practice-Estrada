<%- include('../partials/header') %>

<main>
    <div class="course-header">
        <h1><%= course.courseCode %> – <%= course.name %></h1>

        <p class="course-meta">
            <%= course.creditHours %> credits • <%= course.department %>
        </p>
    </div>

    <div class="sections">
        <div class="sections-header">
            <h2>Available Sections</h2>

            <div class="sort-options">
                <span>Sort by: </span>
                <a href="/catalog/<%= course.slug %>" class="<%= currentSort === 'time' ? 'active' : '' %>">Time</a>
                <a href="/catalog/<%= course.slug %>?sort=professor" class="<%= currentSort === 'professor' ? 'active' : '' %>">Professor</a>
                <a href="/catalog/<%= course.slug %>?sort=room" class="<%= currentSort === 'room' ? 'active' : '' %>">Room</a>
            </div>

            <div class="sort-message">
                <% if (currentSort) { %>
                    <p>Currently sorted by: <%= currentSort %></p>
                <% } else { %>
                    <p>No sorting applied, using default sorting by time.</p>
                <% } %>
            </div>
        </div>

        <div class="section-list">
            <% if (sections.length === 0) { %>
                <p>No sections available.</p>
            <% } else { %>
                <% sections.forEach(section => { %>
                    <div class="section-card">
                        <div class="section-time"><%= section.time %></div>
                        <div class="section-room">Room: <%= section.room %></div>
                        <div class="section-professor">
                            Instructor:
                            <a href="/faculty/<%= section.professorSlug %>">
                                <%= section.professor %>
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="navigation">
        <p><a href="/catalog">&larr; Back to Course Catalog</a></p>
    </div>
</main>

<%- include('../partials/footer') %>
