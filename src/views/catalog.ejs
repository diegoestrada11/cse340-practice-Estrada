<%- include('partials/header') %>

<main>
    <h1>Course Catalog</h1>
    <p>
        Browse our available courses and click on any course to see detailed
        information including available sections and instructors.
    </p>

    <div class="course-list">
        <% courses.forEach(course => { %>
            <div class="course-card">
                <h3>
                    <a href="/catalog/<%= course.slug %>">
                        <%= course.courseCode %> – <%= course.name %>
                    </a>
                </h3>

                <p class="course-id">
                    <%= course.courseCode %> • <%= course.creditHours %> credits
                </p>

                <p class="course-department">
                    <%= course.department %>
                </p>
            </div>
        <% }) %>
    </div>
</main>

<%- include('partials/footer') %>
